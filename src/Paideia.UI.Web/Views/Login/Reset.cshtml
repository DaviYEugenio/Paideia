@model Paideia.Application.LoginViewModel
@{
    ViewData["Title"] = "PasswordRecuperation";
}
@if (ViewBag.IsSuccess == true)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert" id="alertsuccess">
        <strong>Senha inválida</strong>
    </div>
}
<link href="~/css/util.css" rel="stylesheet" />
<link href="~/css/main.css" rel="stylesheet" />
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-b-200">
            <form asp-controller="Login" asp-action="Reset" method="post" class="login100-form validate-form" role="form">
                <div id="log">
                    <span class="login100-form-title p-b-45">
                        Informe as credenciais do usuário
                    </span>
                    <input asp-for="Email"  hidden/>
                    <input asp-for="Token"  hidden/>
                    <div class="wrap-input100 validate-input m-b-10" data-validate="Password is required">
                        <input asp-for="NewPassword" type="password" class="input100" placeholder="Nova senha" id="newPassword" />
                        <span asp-validation-for="NewPassword" class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 validate-input m-b-10" data-validate="Password is required">
                        <input asp-for="ConfirmPassword" type="password" class="input100" placeholder="Confirme a senha" id="confirmPassword" />
                        <span asp-validation-for="ConfirmPassword" class="focus-input100"></span>
                    </div>
                    <div class="container-login100-form-btn">
                        <input type="submit" class="login100-form-btn" value="Reset" id="btnreset" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="~/js/main2.js"></script>