@model Paideia.Application.AccountViewModel
@{
    ViewData["Title"] = "Action";
}
@if (ViewBag.IsSuccess == true)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" id="alertsuccess">
        <strong>O seu email ainda não foi registrado, registre-se aqui.</strong>
    </div>
}
<link href="~/css/util.css" rel="stylesheet" />
<link href="~/css/main.css" rel="stylesheet" />
<div class="container-login100">
    <div class="wrap-login100  p-b-250">
        <form asp-action="Action" class="login100-form validate-form" role="form">
            <span class="login100-form-title  p-b-45">
                @ViewBag.Action
            </span>
            @if (ViewBag.Action == "Criar contra")
            {
                <div class="wrap-input100 validate-input m-b-10" data-validate="Username is required">
                    <input  asp-for="Email" type="email" class="input100" placeholder="Email" />
                    <span name="Email" asp-validation-for="Email" class="focus-input100"></span>
                </div>
                <div class="wrap-input100 validate-input m-b-10" data-validate="Username is required">
                    <input asp-for="UserName" type="text" class="input100" placeholder="Usuário" />
                    <span name="username" asp-validation-for="UserName" class="focus-input100"></span>
                </div>
                <div class="wrap-input100 validate-input m-b-10" data-validate="Password is required">
                    <input asp-for="Password" type="password" class="input100" placeholder="Senha" />
                    <span name="Password" asp-validation-for="Password" class="focus-input100"></span>
                </div>
                <div class="container-login100-form-btn">
                    <input type="submit" class="login100-form-btn" value="@ViewBag.Action" />
                </div>
            }
            @if (ViewBag.Action == "Editar")
            {
                <div class="wrap-input100 validate-input m-b-10" data-validate="Username is required">
                    <input asp-for="UserName" type="text" class="input100" placeholder="Usuário" />
                    <span name="username" asp-validation-for="UserName" class="focus-input100"></span>
                </div>
                <div class="container-login100-form-btn">
                    <input type="submit" class="login100-form-btn" value="@ViewBag.Action" />
                </div>
            }
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="~/js/main2.js"></script>
<script>
    setTimeout(function () {
        $('#alertsuccess').hide();
    }, 8000);</script>
